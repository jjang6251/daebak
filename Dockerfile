# Node.js 이미지 사용
FROM node:21

# 앱 디렉토리 생성
WORKDIR /usr/src/app


# 빌드 타임 변수
ARG DB_HOST
ARG DB_USERNAME
ARG DB_PASSWORD
ARG DB_NAME
ARG SYNCHRONIZE
ARG DROPSCHEMA
ARG JWT_SECRET

# 런타임 변수 설정
ENV DB_HOST=$DB_HOST
ENV DB_USERNAME=$DB_USERNAME
ENV DB_PASSWORD=$DB_PASSWORD
ENV DB_NAME=$DB_NAME
ENV SYNCHRONIZE=$SYNCHRONIZE
ENV DROPSCHEMA=$DROPSCHEMA
ENV JWT_SECRET=$JWT_SECRET

# 패키지 파일 복사
COPY package*.json ./

# 패키지 설치
RUN npm install

# 소스 코드 복사
COPY . .

# 앱 실행
CMD [ "npm", "start" ]